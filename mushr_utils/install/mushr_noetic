export DOCKER_DEFAULT_PLATFORM=linux/arm64
export MUSHR_INSTALL_PATH=/Users/tony/Desktop/lecar_lab/code/simulators/mushr_sim/catkin_ws/src/mushr/mushr_utils/install
export MUSHR_REAL_ROBOT=0
export MUSHR_WS_PATH=/Users/tony/Desktop/lecar_lab/code/simulators/mushr_sim
export MUSHR_COMPOSE_FILE=docker-compose-build-cpu.yml
export MUSHR_OS_TYPE=Darwin
if [ $# == 0 ] || [ $1 == "run" ];
then
  docker-compose -f $MUSHR_INSTALL_PATH/$MUSHR_COMPOSE_FILE run -p 	9090:9090 mushr_noetic bash
elif [ $1 == "build" ];
then
  docker-compose -f /Users/tony/Desktop/lecar_lab/code/simulators/mushr_sim/catkin_ws/src/mushr/mushr_utils/install/docker-compose-build-cpu.yml build --no-cache mushr_noetic
else
  echo "Invalid command supplied to mushr_noetic script; valid commands are 'run' or 'build'"
fi
